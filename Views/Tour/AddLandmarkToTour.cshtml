@model IEnumerable<TripManager.Models.Landmark>

@{
    ViewData["Title"] = "Add Landmarks to Tour";
}

<h1>@ViewData["Title"]</h1>

<form method="post" action="@Url.Action("AddLandmarkToTour", "Tour")">
    <input type="hidden" name="tourId" value="@ViewBag.TourId" />

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var landmark in Model)
            {
                <tr>
                    <td>@landmark.Name</td>
                    <td>
                        <form method="post" action="@Url.Action("AddLandmarkToTour", "Tour")">
                            <input type="hidden" name="tourId" value="@ViewBag.TourId" />
                            <input type="hidden" name="landmarkId" value="@landmark.Id" />
                            <button type="submit" class="btn btn-primary">Add to Tour</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
